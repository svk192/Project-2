<div class="container">
    <form>
        <div class="form-group row">
            <label for="inputAuthor" class="col-sm-2 col-form-label">Author</label>
            <div class="col-sm-10">
                <input type="author" class="form-control" id="inputAuthor" placeholder="Margaret Atwood">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input type="title" class="form-control" id="inputTitle" placeholder="The Handmaid's Tale">
            </div>
        </div>
    </form>
    <button type="submit" class="btn btn-primary" id="addBook">Submit</button>
</div>